async function handleLoan(bookId) {
  const res = await fetch(`${API_URL}/${bookId}/loan`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ username: state.currentUser.username }),
  });

  if (res.ok) {
    const data = await res.json();

    Toast.success(`‚úÖ ${data.book.title} prestado exitosamente`, 3000);

    loadBooks();
    if (state.currentUser.role === "admin") loadHistory();
  } else {
    const error = await res.json();
    if (error.currentLoans && error.maxLoans) {
      Toast.error(
        `‚ö†Ô∏è L√≠mite alcanzado: Tienes ${error.currentLoans}/${error.maxLoans} pr√©stamos activos. Devuelve un libro primero.`,
        5000,
      );
    } else {
      Toast.error(error.message || "No se pudo prestar el libro", 3000);
    }
  }
}

async function handleReturn(bookId) {
  const res = await fetch(`${API_URL}/${bookId}/return`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ username: state.currentUser.username }),
  });

  if (res.ok) {
    const book = state.books.find((b) => b.bookId === bookId);
    Toast.success(
      `‚úÖ ${book ? book.title : "Libro"} devuelto exitosamente`,
      3000,
    );

    loadBooks();
    if (state.currentUser.role === "admin") {
      loadHistory();
    } else {
      // Refrescar la lista de pr√©stamos del usuario
      loadUserLoans();
    }
  } else {
    let err = { message: "No se pudo devolver el libro" };
    try {
      err = await res.json();
    } catch (e) {
      console.error("Error parsing return error", e);
    }
    Toast.error(err.message || "No se pudo devolver el libro", 4000);
  }
}

// Funciones para el Carrito de Pr√©stamos
function toggleBookSelection(bookId) {
  const index = state.selectedBooks.indexOf(bookId);
  if (index > -1) {
    state.selectedBooks.splice(index, 1);
  } else {
    state.selectedBooks.push(bookId);
  }
  updateCartCount();
}

function toggleSelectAll(checked) {
  if (checked) {
    state.selectedBooks = state.filteredBooks.map((b) => b.bookId);
  } else {
    state.selectedBooks = [];
  }
  renderBookTable();
  updateCartCount();
}

function updateCartCount() {
  const cartCount = document.getElementById("cart-count");
  const btnLoanSelected = document.getElementById("btn-loan-selected");
  const selectAllCheckbox = document.getElementById("select-all-books");

  if (cartCount) {
    cartCount.textContent = state.selectedBooks.length;
    cartCount.style.display =
      state.selectedBooks.length > 0 ? "inline-block" : "none";
  }

  if (btnLoanSelected) {
    btnLoanSelected.style.display =
      state.selectedBooks.length > 0 ? "block" : "none";
  }

  if (selectAllCheckbox) {
    selectAllCheckbox.checked =
      state.selectedBooks.length > 0 &&
      state.selectedBooks.length === state.filteredBooks.length;
  }
}

async function handleLoanSelected() {
  if (state.selectedBooks.length === 0) {
    Toast.warning("Selecciona al menos un libro para prestar", 3000);
    return;
  }

  const failed = [];
  const success = [];

  for (const bookId of state.selectedBooks) {
    const res = await fetch(`${API_URL}/${bookId}/loan`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ username: state.currentUser.username }),
    });

    if (res.ok) {
      const book = state.books.find((b) => b.bookId === bookId);
      success.push(book ? book.title : bookId);
    } else {
      const error = await res.json();
      failed.push(error.message || "Error desconocido");
    }
  }

  // Mostrar resultados
  if (success.length > 0) {
    Toast.success(
      `‚úÖ ${success.length} libro(s) prestado(s): ${success.join(", ")}`,
      4000,
    );
  }

  if (failed.length > 0) {
    Toast.error(
      `‚ùå ${failed.length} libro(s) no se pudieron prestar: ${failed.join(", ")}`,
      5000,
    );
  }

  // Limpiar carrito y recargar
  state.selectedBooks = [];
  loadBooks();
  if (state.currentUser.role === "admin") {
    loadHistory();
  } else {
    loadUserLoans();
  }
  updateCartCount();
}

function toggleAdminPanel() {
  const tabsContainer = document.getElementById("admin-tabs-container");
  const welcomeSection = document.getElementById("welcome-section");
  const isHidden =
    !tabsContainer.style.display || tabsContainer.style.display === "none";

  tabsContainer.style.display = isHidden ? "block" : "none";
  if (welcomeSection) {
    welcomeSection.style.display = isHidden ? "none" : "block";
  }

  if (isHidden) {
    renderAdminInventory();
    loadHistory();
  }
}

function switchAdminTab(tabName) {
  // Ocultar todas las pesta√±as
  document.querySelectorAll(".admin-tab-content").forEach((tab) => {
    tab.classList.remove("active");
    tab.style.display = "none";
  });

  // Desactivar todos los botones de pesta√±a
  document.querySelectorAll(".tab-btn").forEach((btn) => {
    btn.classList.remove("active");
  });

  // Mostrar la pesta√±a seleccionada
  let selectedTab;
  let selectedBtn;

  switch (tabName) {
    case "catalog":
      selectedTab = document.getElementById("admin-catalog-tab");
      selectedBtn = document.querySelectorAll(".tab-btn")[0];
      break;
    case "inventory":
      selectedTab = document.getElementById("admin-inventory-tab");
      selectedBtn = document.querySelectorAll(".tab-btn")[1];
      break;
    case "dashboard":
      selectedTab = document.getElementById("admin-dashboard-tab");
      selectedBtn = document.querySelectorAll(".tab-btn")[2];
      loadAdminDashboard();
      break;
    case "history":
      selectedTab = document.getElementById("admin-history-tab");
      selectedBtn = document.querySelectorAll(".tab-btn")[3];
      break;
  }

  if (selectedTab) {
    selectedTab.classList.add("active");
    selectedTab.style.display = "block";
  }
  if (selectedBtn) {
    selectedBtn.classList.add("active");
  }
}

